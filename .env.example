# Deployment used by `npx convex dev`, add the same env into your convex dashboard
CONVEX_DEPLOYMENT=

NEXT_PUBLIC_CONVEX_URL=

SETUP_SCRIPT_RAN=

AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_RESEND_KEY=    

# For Heroku Inference API
HEROKU_INFERENCE_URL=

# Multiple model support - configure API keys for each model you want to use
HEROKU_INFERENCE_KEY_OSS=          # For gpt-oss-120b model
HEROKU_INFERENCE_KEY_CLAUDE=       # For claude-4-5-sonnet model
HEROKU_INFERENCE_KEY_NOVA_LITE=    # For nova-lite model
HEROKU_INFERENCE_KEY_NOVA_PRO=     # For nova-pro model

# Allowed/Default models (CSV). First available will be used by default.
# Example: gpt-oss-120b,claude-4-5-sonnet,nova-lite,nova-pro
HEROKU_INFERENCE_MODEL_ID=gpt-oss-120b,claude-4-5-sonnet,nova-lite,nova-pro

# Auth0 Configuration (Traditional Auth - Optional)
AUTH0_SECRET=                      # A long, secret value used to encrypt the session cookie (generate with: openssl rand -hex 32)
AUTH0_BASE_URL=                    # The base URL of your application (e.g., http://localhost:3000)
AUTH0_ISSUER_BASE_URL=            # Your Auth0 domain (e.g., https://your-domain.auth0.com)
AUTH0_CLIENT_ID=                   # Your Auth0 application client ID
AUTH0_CLIENT_SECRET=              # Your Auth0 application client secret
AUTH0_AUDIENCE=                   # Your Auth0 API audience (e.g., https://api.studyflow.ai)

# Auth0 AI Token Vault Configuration (for managing third-party API tokens)
# This is used to securely store and manage OAuth tokens for Google Calendar, Spotify, etc.
AUTH0_DOMAIN=                      # Your Auth0 tenant domain (e.g., studyflow-dev.us.auth0.com)
AUTH0_API_CLIENT_ID=               # Resource server client ID for token exchange
AUTH0_API_CLIENT_SECRET=           # Resource server client secret for token exchange
AUTH0_GOOGLE_CONNECTION=google-oauth2  # Auth0 connection name for Google OAuth
AUTH0_SPOTIFY_CONNECTION=spotify   # Auth0 connection name for Spotify (future)

# Feature Flags for Auth0 Token Vault (gradual rollout)
USE_TOKEN_VAULT_GOOGLE=false       # Enable Token Vault for Google Calendar (set to 'true' to activate)
USE_TOKEN_VAULT_SPOTIFY=false      # Enable Token Vault for Spotify (future)
FALLBACK_TO_CONVEX=true           # Fallback to Convex token storage if Token Vault fails

# Google Calendar MCP Server Configuration (for Convex integration)
GOOGLE_CALENDAR_MCP_URL=          # MCP server URL (e.g., https://your-calendar-mcp-server.herokuapp.com)
GOOGLE_CALENDAR_MCP_API_KEY=      # API key for MCP server authentication (generate secure random string, min 32 chars)
GOOGLE_CLIENT_ID=                 # Google OAuth Client ID (from Google Cloud Console)
GOOGLE_CLIENT_SECRET=            # Google OAuth Client Secret (from Google Cloud Console)